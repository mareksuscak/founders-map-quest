@require "normalize"
@require 'mixins'

html
body
  font-family 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-size 100%
  margin 0
  padding 0

html
body
#react-container
.founder-map-app
  height 100%
  width 100%

a,
a:hover
a:link
a:visited
a:active
  color black
  font-size 1em
  text-decoration none

.btn
.btn:hover
.btn:link
.btn:visited
.btn:active
  background-color black
  color white
  display block

.main
  height 100%
  overflow-x hidden
  overflow-y auto
  position fixed
  width 30em

.header
  height 1.75em
  margin 0.5em
  position relative

  h1
    font-size 1.5em
    font-weight normal
    margin 0
    padding 0

  .register-btn
    right 0
    padding 0.25em 0.20em
    position absolute
    top 0

.info
  background-color #fafafa
  border-bottom 1px solid #e4e4e4
  border-top 1px solid #e4e4e4
  min-height 1.5em
  padding 0.5em 0

.filter
  clearfix()

  .filter-col
    float left
    margin 0 0.5em 0 0.5em
    width 9em

  .sort-by
    font-size 0.8em
    width 9em

  .sort-order
    display inline-block

  .filter-by
    font-size 0.8em
    width inherit

  .search-term
    font-size 0.8em
    height 1.25em
    width 9em

.content
  padding 0.5em

.loader
  verticalAlignParent()
  height 100%
  position absolute
  text-align center
  top 0
  width 100%
  z-index 10

  &:after
    content: " ";
    z-index: 11;
    display: block;
    position: absolute;
    height: 100%;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.5);

  img
    verticalAlign()
    z-index 10


.list
  display block

.item
  display block

.map
  height 100%
  margin-left 30em

  #leaflet-map-container
    height 100%
    width 100%

// Tablets
@media only screen and (min-width: 760px) and (max-width: 1000px) {

}

// Mobile
@media only screen and (max-width: 760px)
  .main
    width 100%

  .map
    visibility hidden

// Wide mobile
@media only screen and (min-width: 480px) and (max-width: 760px)
  .main
    width 100%

  .map
    visibility hidden
