@require 'normalize'
@require 'mixins'
@require 'base'

/* Loader overlay
------------------------------------------------------- */
.map-pane
  bottom 0
  left 0
  position fixed
  right 0
  top 0


/* Loader overlay
------------------------------------------------------- */
.navbar-wrapper
  left 10px
  position fixed
  top 10px

  .navbar-overlay
    width 500px

    a.button
      background transparent
      border-left 1px solid rgba(255,255,255,0.25)

    a.button.active
      background-color rgba(40,53,61,0.5)

    .nav-search
      height 40px
      width 40px

  h1
    color rgba(255, 255, 255, 0.7)
    font-size 22px
    line-height 40px
    margin 0 10px
    user-select none

    strong
      color rgba(255, 255, 255, 1)

  .nav-register
    background-color #9b59b6

  .nav-register:hover
  .nav-register.active
    background-color #A66BBE
    color #fff



/* Loader overlay
------------------------------------------------------- */
.loader
  vert-align-parent()
  background-color rgba(0,0,0,0.5)
  bottom 0
  visibility hidden
  left 0
  height 100%
  opacity 0
  position fixed
  right 0
  top 0
  text-align center
  width 100%

  &.active
    visibility visible
    opacity 1.0

  .spinner
    vert-align()
    background url('data:image/svg+xml;base64,') no-repeat center center
    background-size: 60px;
    height 60px
    margin 0 auto
    width 60px


